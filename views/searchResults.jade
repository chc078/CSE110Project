doctype html
html(lang='en')
    head
        link(rel='stylesheet', type='text/css', href='//fonts.googleapis.com/css?family=Abril+Fatface')
        meta(name='viewport', content='initial-scale=1')
        link(rel='stylesheet', type='text/css', href='stylesheets/styleSearchResults.css')
        meta(charset='UTF-8')
        title Recipe Results
    body
        #headers.headers
                form.search-container
                    h1 FOODOPIA
                    input.search-bar(type='text', placeholder='Search for...')
                    //a(href='#')
                        img.search-icon(src='http://www.endlessicons.com/wp-content/uploads/2012/12/search-icon.png')


        filters#Filters.controls
            #container
                .cuisines
                    .filters
                        .filter.filter--input.filter--cuisine
                            input.cuisine(type="text" placeholder="What am I feeling like?" data-placeholder="What am I feeling like?"
                            data-placeholder-expanded="Cuisine")
                            .icon.icon--cuisine
                            .icon.icon--clear
                        input#c1(type='checkbox', name='cb')
                        label(for='c1') Chinese
                        input#c2(type='checkbox', name='cb')
                        label(for='c2') Mexican
                        input#c3(type='checkbox', name='cb')
                        label(for='c3') Thai
                        input#c4(type='checkbox', name='cb')
                        label(for='c4') American
                        input#c5(type='checkbox', name='cb')
                        label(for='c5') Indian
                        input#c6(type='checkbox', name='cb')
                        label(for='c6') Others
